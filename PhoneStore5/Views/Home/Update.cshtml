@model PhoneProduct
@{
    ViewData["Title"] = "Update";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .main {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 300px;
        }

        .main h2 {
            color: #4caf50;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #555;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            margin-bottom: 15px;
            padding: 10px;
            box-sizing: border-box;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        button[type="submit"] {
            padding: 15px;
            border-radius: 10px;
            border: none;
            background-color: #4caf50;
            color: white;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
        }
    </style>
</head>

<body>
<center>
    <h1>Update</h1>
    <div class="main">
        <form asp-action="Update">
            <input type="hidden" asp-for="Id"/>
            <label>نام:</label>
            <input type="text" required asp-for="Name"/>

            <label>CPU نام:</label>
            <input type="text" required asp-for="NameChipset"/>

            <label>دوربین:</label>
            <input type="text" asp-for="Camera" required/>

            <label>توضیحات:</label>
            <input type="text" asp-for="Description" required/>


            <button type="submit">ذخیره</button>
        </form>
    </div>
</center>
</body>
</html>

